@using JuanApp.Models.ViewModels
@model UserRegisterVm
<div class="col-lg-6">
    <div class="login-reg-form-wrap signup-form">
        <h2>Singup Form</h2>
        <form  method="post">
            <div class="single-input-item">
                <input asp-for="Fullname" type="text" placeholder="Full Name" required />
            </div>
            <div class="single-input-item">
                <input asp-for="Email" placeholder="Enter your Email" required />
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <input asp-for="Password" placeholder="Enter your Password" required />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <input asp-for="ConfirmPassword" placeholder="Repeat your Password" required />
                    </div>
                </div>
            </div>
            <div class="single-input-item">
                <div class="login-reg-form-meta">
                    <div class="remember-meta">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="subnewsletter">
                            <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="single-input-item">
                <button type="submit"class="btn">Register</button>
            </div>
        </form>
    </div>
</div>